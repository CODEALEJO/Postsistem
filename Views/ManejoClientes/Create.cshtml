@model Postsistem.Models.ManejoClientes

@{
    ViewData["Title"] = "Nuevo Cliente";
}

<div class="container mt-4" style="max-width: 800px;">
    <h2 class="mb-4 text-center text-success">
        <i class="bi bi-person-plus"></i> Registrar Nuevo Cliente
    </h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="NombreCliente" class="form-label fw-bold">Nombre Completo</label>
                    <input asp-for="NombreCliente" class="form-control" placeholder="Ejemplo: Juan Pérez" />
                    <span asp-validation-for="NombreCliente" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NumeroDocumento" class="form-label fw-bold">Cédula</label>
                    <input asp-for="NumeroDocumento" class="form-control" placeholder="Ejemplo: 1234567890" />
                    <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Celular" class="form-label fw-bold">Celular</label>
                    <input asp-for="Celular" class="form-control" placeholder="Ejemplo: 3001234567" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SaldoPendiente" class="form-label fw-bold">Saldo Pendiente ($)</label>
                        <input asp-for="SaldoPendiente" class="form-control" value="0" />
                        <span asp-validation-for="SaldoPendiente" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="SaldoAFavor" class="form-label fw-bold">Saldo a Favor ($)</label>
                        <input asp-for="SaldoAFavor" class="form-control" value="0" />
                        <span asp-validation-for="SaldoAFavor" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Guardar Cliente
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
