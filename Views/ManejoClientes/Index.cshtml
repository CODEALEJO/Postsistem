@model List<Postsistem.Models.ManejoClientes>

@{
    ViewData["Title"] = "Gestión de Clientes";
}

<div class="container mt-4">

    <h2 class="mb-4 text-center">Gestión de Clientes</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mx-auto" style="max-width: 800px;" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filtros de búsqueda -->
    <div class="card mb-4 mx-auto" style="max-width: 1000px;">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3 justify-content-center align-items-center">
                <div class="col-md-8">
                    <label for="nombre" class="form-label">Buscar por nombre o documento:</label>
                    <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre o número de documento"
                           value="@Context.Request.Query["nombre"]" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="bi bi-person-plus"></i> Nuevo Cliente
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Listado de clientes -->
    <div class="accordion mx-auto" id="clientesAccordion" style="max-width: 1000px;">
        @foreach (var cliente in Model)
        {
            <div class="accordion-item mb-3 border rounded">
                <h2 class="accordion-header" id="heading-@cliente.Id">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse-@cliente.Id" aria-expanded="false"
                            aria-controls="collapse-@cliente.Id">
                        <div class="d-flex justify-content-between w-100">
                            <span class="fw-bold">@cliente.NombreCliente</span>
                            <span class="text-muted me-3">@cliente.NumeroDocumento</span>
                            @if (cliente.PazYSalvo)
                            {
                                <span class="badge bg-success">Paz y Salvo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Debe dinero</span>
                            }
                        </div>
                    </button>
                </h2>
                <div id="collapse-@cliente.Id" class="accordion-collapse collapse" aria-labelledby="heading-@cliente.Id"
                     data-bs-parent="#clientesAccordion">
                    <div class="accordion-body">

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <p><strong>Saldo Pendiente:</strong> $@cliente.SaldoPendienteFormateado</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>Saldo a Favor:</strong> $@cliente.SaldoAFavorFormateado</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>Total Abonado:</strong> $@cliente.TotalAbonado.ToString("N0")</p>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p><strong>Fecha de Registro:</strong> @cliente.FechaRegistro.ToLocalTime().ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Teléfono:</strong> @(string.IsNullOrEmpty(cliente.Celular) ? "No registrado" : cliente.Celular)</p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-3">
                            <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-info btn-sm me-2">
                                <i class="bi bi-eye"></i> Ver Detalles
                            </a>
                            <a asp-action="RegistrarAbono" asp-route-id="@cliente.Id" class="btn btn-success btn-sm me-2">
                                <i class="bi bi-cash-coin"></i> Abono
                            </a>
                            <a asp-action="RegistrarDevolucion" asp-route-id="@cliente.Id" class="btn btn-secondary btn-sm me-2">
                                <i class="bi bi-arrow-counterclockwise"></i> Devolución
                            </a>
                            <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-warning btn-sm me-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const nombreInput = document.getElementById('nombre');
            const searchForm = document.querySelector('form[method="get"]');

            function handleNombreChange() {
                if (nombreInput.value === '') {
                    searchForm.submit();
                }
            }

            nombreInput.addEventListener('input', function () {
                clearTimeout(this.timer);
                this.timer = setTimeout(function () {
                    handleNombreChange();
                }, 500);
            });
        });
    </script>
}
