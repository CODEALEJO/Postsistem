@model Postsistem.Models.Producto

@{
    ViewData["Title"] = "Registrar Salida";
}

<div class="container mt-4" style="max-width: 600px;">
    <h3 class="mb-4 text-center">Registrar Salida</h3>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="Crear" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" name="productoId" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Producto</label>
            <input class="form-control" value="@Model.Nombre" readonly />
        </div>

        <div class="mb-3">
            <label for="cantidad" class="form-label">Cantidad a retirar</label>
            <input type="number"
                   name="cantidad"
                   id="cantidad"
                   class="form-control"
                   min="1"
                   max="@Model.Cantidad"
                   required />
            <small class="text-muted">Disponible: @Model.Cantidad</small>
        </div>

        <div class="mb-3">
            <label for="nota" class="form-label">Motivo / Nota</label>
            <textarea name="nota"
                      id="nota"
                      class="form-control"
                      rows="3"
                      placeholder="Garantía, cambio, daño, pérdida..."></textarea>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" asp-controller="Productos" class="btn btn-secondary">
                Volver
            </a>
            <button type="submit" class="btn btn-danger">
                Registrar Salida
            </button>
        </div>
    </form>
</div>
