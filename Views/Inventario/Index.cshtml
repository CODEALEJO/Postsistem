@model List<Postsistem.Models.Producto>

@{
    ViewData["Title"] = "Inventario";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Inventario de Productos</h2>

    <!-- SweetAlert para mensajes de éxito y error -->
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    icon: 'success',
                    title: '¡Éxito!',
                    html: '@Html.Raw(TempData["SuccessMessage"])',
                    timer: 3000,
                    showConfirmButton: false,
                    position: 'top-end',
                    toast: true,
                    background: '#d4edda',
                    iconColor: '#155724'
                });
            });
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    html: '@Html.Raw(TempData["ErrorMessage"])',
                    timer: 4000,
                    showConfirmButton: true,
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#dc3545'
                });
            });
        </script>
    }

    <!-- Filtros de búsqueda -->
    <div class="card mb-4 mx-auto" style="max-width: 1000px;">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3 justify-content-center align-items-center">
                <div class="col-md-8">
                    <label for="nombre" class="form-label">Buscar por nombre:</label>
                    <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre del producto"
                        value="@Context.Request.Query["nombre"]" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="CreateMultiple" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Nuevo Producto
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Listado de productos -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mx-auto" style="max-width: 1000px;">
            <i class="bi bi-info-circle me-2"></i>
            No hay productos en el inventario. 
            <a asp-action="CreateMultiple" class="alert-link">¡Agrega el primero!</a>
        </div>
    }
    else
    {
        <div class="accordion mx-auto" id="inventarioAccordion" style="max-width: 1000px;">
            @foreach (var producto in Model)
            {
                <div class="accordion-item mb-3 border rounded">
                    <h2 class="accordion-header" id="heading-@producto.Id">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapse-@producto.Id">
                            <div class="d-flex justify-content-between w-100 align-items-center">
                                <span class="fw-bold">@producto.Nombre</span>
                                <span class="badge bg-primary rounded-pill">@producto.Cantidad unidades</span>
                                <span class="badge bg-success">
                                    <i class="bi bi-coin me-1"></i> $@producto.GananciaTotalFormateado
                                </span>
                            </div>
                        </button>
                    </h2>

                    <div id="collapse-@producto.Id" class="accordion-collapse collapse" data-bs-parent="#inventarioAccordion">
                        <div class="accordion-body">
                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body p-3">
                                            <h6 class="card-subtitle mb-1 text-muted">Costo</h6>
                                            <p class="card-text fw-bold text-primary">$@producto.CostoFormateado</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body p-3">
                                            <h6 class="card-subtitle mb-1 text-muted">Precio Venta</h6>
                                            <p class="card-text fw-bold text-success">$@producto.PrecioVentaFormateado</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body p-3">
                                            <h6 class="card-subtitle mb-1 text-muted">Ganancia Unidad</h6>
                                            <p class="card-text fw-bold @(producto.GananciaPorUnidad >= 0 ? "text-success" : "text-danger")">
                                                $@producto.GananciaPorUnidadFormateado
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body p-3">
                                            <h6 class="card-subtitle mb-1 text-muted">Valor Total</h6>
                                            <p class="card-text fw-bold text-info">
                                                $@((producto.Costo * producto.Cantidad).ToString("N0", new System.Globalization.CultureInfo("es-CO")))
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mb-3">
                                <a asp-action="Edit" asp-route-id="@producto.Id" class="btn btn-warning btn-sm me-2">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>

                                <a asp-controller="Salidas" asp-action="Crear" asp-route-id="@producto.Id"
                                    class="btn btn-info btn-sm me-2">
                                    <i class="bi bi-box-arrow-up"></i> Salida
                                </a>

                                <form asp-action="Delete" asp-route-id="@producto.Id" method="post"
                                    class="delete-form d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-danger btn-sm btn-delete"
                                        data-nombre="@producto.Nombre" data-id="@producto.Id">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </form>
                            </div>

                            @if (producto.Salidas != null && producto.Salidas.Any())
                            {
                                <div class="mt-4">
                                    <h6 class="border-bottom pb-2">
                                        <i class="bi bi-clock-history me-2"></i> Historial de salidas
                                        <span class="badge bg-secondary ms-2">@producto.Salidas.Count()</span>
                                    </h6>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th><i class="bi bi-calendar me-1"></i> Fecha</th>
                                                    <th><i class="bi bi-box me-1"></i> Cantidad</th>
                                                    <th><i class="bi bi-chat-left-text me-1"></i> Nota</th>
                                                    <th><i class="bi bi-person me-1"></i> Usuario</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var s in producto.Salidas.OrderByDescending(s => s.FechaSalida))
                                                {
                                                    <tr>
                                                        <td>@s.FechaSalida.ToString("dd/MM/yyyy HH:mm")</td>
                                                        <td>
                                                            <span class="badge bg-danger">@s.Cantidad</span>
                                                        </td>
                                                        <td>
                                                            @if (!string.IsNullOrEmpty(s.Nota))
                                                            {
                                                                <small class="text-muted">@s.Nota</small>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted fst-italic">Sin nota</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <small>@s.Usuario</small>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-light text-center mt-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    No hay registro de salidas para este producto.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section Scripts {
    <script>
        // Auto-buscar cuando se borra el texto
        document.getElementById('nombre')?.addEventListener('input', function () {
            clearTimeout(this.timer);
            this.timer = setTimeout(() => {
                if (this.value === '') {
                    this.closest('form').submit();
                }
            }, 500);
        });

        // SweetAlert para eliminar
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', function () {
                const form = this.closest('.delete-form');
                const nombre = this.dataset.nombre;
                const id = this.dataset.id;

                Swal.fire({
                    title: '¿Eliminar producto?',
                    html: `
                        <div class="text-start">
                            <p>Se eliminará permanentemente:</p>
                            <ul class="text-start">
                                <li><strong>Producto:</strong> ${nombre}</li>
                                <li><strong>ID:</strong> ${id}</li>
                            </ul>
                            <p class="text-danger fw-bold">Esta acción no se puede deshacer.</p>
                        </div>
                    `,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: '<i class="bi bi-trash"></i> Sí, eliminar',
                    cancelButtonText: '<i class="bi bi-x-circle"></i> Cancelar',
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#6c757d',
                    reverseButtons: true,
                    customClass: {
                        confirmButton: 'me-2',
                        cancelButton: 'ms-2'
                    }
                }).then(result => {
                    if (result.isConfirmed) {
                        // Mostrar carga mientras se procesa
                        Swal.fire({
                            title: 'Eliminando...',
                            text: 'Por favor espera',
                            allowOutsideClick: false,
                            showConfirmButton: false,
                            willOpen: () => {
                                Swal.showLoading();
                            }
                        });
                        
                        // Enviar formulario
                        form.submit();
                    }
                });
            });
        });

        // Auto-expandir si hay un solo producto
        document.addEventListener('DOMContentLoaded', function() {
            const accordionItems = document.querySelectorAll('.accordion-item');
            if (accordionItems.length === 1) {
                const firstButton = document.querySelector('.accordion-button');
                if (firstButton) {
                    firstButton.click();
                }
            }
        });
    </script>
}