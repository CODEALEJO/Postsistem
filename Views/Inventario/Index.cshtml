@model List<Postsistem.Models.Producto>

@{
    ViewData["Title"] = "Inventario";
}

<div class="container mt-4">

    <h2 class="mb-4 text-center">Inventario de Productos</h2>

    <!-- SweetAlert éxito al eliminar -->
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    icon: 'success',
                    title: 'Éxito',
                    text: '@TempData["SuccessMessage"]',
                    timer: 2000,
                    showConfirmButton: false
                });
            });
        </script>
    }
    <!-- Filtros de búsqueda -->
    <div class="card mb-4 mx-auto" style="max-width: 1000px;">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3 justify-content-center align-items-center">
                <div class="col-md-8">
                    <label for="nombre" class="form-label">Buscar por nombre:</label>
                    <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre del producto"
                        value="@Context.Request.Query["nombre"]" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="d-grid gap-2 d-md-flex">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="CreateMultiple" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Nuevo Producto
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Listado de productos -->
    <div class="accordion mx-auto" id="inventarioAccordion" style="max-width: 1000px;">
        @foreach (var producto in Model)
        {
            <div class="accordion-item mb-3 border rounded">
                <h2 class="accordion-header" id="heading-@producto.Id">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapse-@producto.Id">
                        <div class="d-flex justify-content-between w-100">
                            <span class="fw-bold">@producto.Nombre</span>
                            <span class="text-muted">Cantidad: @producto.Cantidad</span>
                            <span class="badge bg-success">
                                Ganancia: $@producto.GananciaTotalFormateado
                            </span>
                        </div>
                    </button>
                </h2>

                <div id="collapse-@producto.Id" class="accordion-collapse collapse" data-bs-parent="#inventarioAccordion">
                    <div class="accordion-body">

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <p><strong>Costo Unitario:</strong> $@producto.CostoFormateado</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>Precio Venta:</strong> $@producto.PrecioVentaFormateado</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>Ganancia Unidad:</strong> $@producto.GananciaPorUnidadFormateado</p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Edit" asp-route-id="@producto.Id" class="btn btn-warning btn-sm me-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>

                            <a asp-controller="Salidas" asp-action="Crear" asp-route-id="@producto.Id"
                                class="btn btn-info btn-sm me-2">
                                <i class="bi bi-box-arrow-up"></i> Salida
                            </a>

                            <form asp-action="Delete" asp-route-id="@producto.Id" method="post"
                                class="delete-form d-inline">
                                @Html.AntiForgeryToken()
                                <button type="button" class="btn btn-danger btn-sm btn-delete"
                                    data-nombre="@producto.Nombre">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </form>
                        </div>

                        @if (producto.Salidas != null && producto.Salidas.Any())
                        {
                            <div class="mt-3">
                                <h6>Historial de salidas</h6>
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Cantidad</th>
                                            <th>Nota</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var s in producto.Salidas.OrderByDescending(s => s.FechaSalida))
                                        {
                                            <tr>
                                                <td>@s.FechaSalida.ToShortDateString()</td>
                                                <td>@s.Cantidad</td>
                                                <td>@s.Nota</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }


                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section Scripts {
    <script>
        // Auto-buscar cuando se borra el texto
        document.getElementById('nombre')?.addEventListener('input', function () {
            clearTimeout(this.timer);
            this.timer = setTimeout(() => {
                if (this.value === '') {
                    this.closest('form').submit();
                }
            }, 500);
        });

        // SweetAlert para eliminar
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', function () {
                const form = this.closest('.delete-form');
                const nombre = this.dataset.nombre;

                Swal.fire({
                    title: '¿Eliminar producto?',
                    text: `Se eliminará "${nombre}". Esta acción no se puede deshacer.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar',
                    confirmButtonColor: '#16c940',
                    cancelButtonColor: '#d33'
                }).then(result => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}