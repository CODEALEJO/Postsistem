@model Postsistem.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4" style="max-width: 700px;">

    <h2 class="mb-4 text-center">Editar Producto</h2>

    <div class="card shadow">
        <div class="card-body">

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                <!-- ID oculto (MUY IMPORTANTE) -->
                <input type="hidden" asp-for="Id" />

                <!-- Nombre -->
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Cantidad -->
                <div class="mb-3">
                    <label asp-for="Cantidad" class="form-label"></label>
                    <input asp-for="Cantidad" type="number" class="form-control" min="0" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <!-- Costo -->
                <div class="mb-3">
                    <label asp-for="Costo" class="form-label"></label>
                    <input asp-for="Costo"
                           type="number"
                           step="0.01"
                           min="0"
                           class="form-control" />
                    <span asp-validation-for="Costo" class="text-danger"></span>
                </div>

                <!-- Precio Venta -->
                <div class="mb-3">
                    <label asp-for="PrecioVenta" class="form-label"></label>
                    <input asp-for="PrecioVenta"
                           type="number"
                           step="0.01"
                           min="0"
                           class="form-control" />
                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-danger">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
